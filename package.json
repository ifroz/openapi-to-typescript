{
  "name": "openapi-to-typescript",
  "version": "0.0.0-semantically-released",
  "description": "Generate TypeScript typings based on an OpenAPI schema object.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*.js"
  ],
  "repository": {
    "url": "https://github.com/ifroz/openapi-to-typescript"
  },
  "author": "László Szűcs <ifrozen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "cli": "ts-node ./lib/cli",
    "commit": "git-cz",
    "cz": "git-cz",
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "test": "jest"
  },
  "dependencies": {
    "@types/yargs": "^13.0.0",
    "json-schema-ref-parser": "^6.1.0",
    "json-schema-to-typescript": "^6.1.0",
    "lodash": "^4.17.11",
    "source-map-support": "^0.5.12",
    "yargs": "^13.2.1"
  },
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/jest": "^25.1.0",
    "@types/node": "^12.0.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "execa": "^1.0.0",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.1",
    "tslint": "^5.13.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
